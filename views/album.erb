<% if @album %>
	<h4>Album Name: <%= @album.name%></h4>

	<h3>Album Songs</h3>

	<% if @album.songs %>
		<ul>
			<% @album.songs.each do |song|%>
				<li><a href="/albums/<%=@album.id%>/songs/<%=song.id%>"><%=song.name%></a></li>
			<% end %>
		</ul>
	<% else %>
		<p>There are not songs for this album</p>
	<% end %>

	<h4>Add a song</h4>

	<form action="/albums/<%= @album.id%>/songs" method="post">
		<div clas="form-group">
			<label for="song_name">song name</label>
			<input id="song_name" name="song_name" class="form-control" type="text">
		</div>
		<button type="submit">add song</button>
	</form>

	<p><a href="/albums/<%= @album.id%>/edit">edit album</a></p>
	<a href="albums">return album list</a>

<%else%>
	<h1>No album record with this id => <%= @id%></h1>
<%end%>



